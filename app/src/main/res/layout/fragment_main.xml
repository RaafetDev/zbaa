<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- WebView -->
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_bar" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/dark_surface"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_home"
            android:contentDescription="Home"
            android:scaleType="centerInside" />

        <!-- Accounts Button -->
        <ImageButton
            android:id="@+id/btn_accounts"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Accounts"
            android:scaleType="centerInside" />

        <!-- Center Button (Bigger) -->
        <ImageButton
            android:id="@+id/btn_center"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1.2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Center Action"
            android:scaleType="centerInside"
            android:layout_marginHorizontal="8dp" />

        <!-- Bot Config Button -->
        <ImageButton
            android:id="@+id/btn_bot_config"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="Bot Config"
            android:scaleType="centerInside" />

        <!-- Profile Button -->
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_myplaces"
            android:contentDescription="Profile"
            android:scaleType="centerInside" />

    </LinearLayout>

</RelativeLayout>